{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python3 railway_combined_service.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "AUTO_START_SCHEDULER": "true",
      "POST_FREQUENCY": "daily",
      "POST_TIME": "09:00"
    }
  }
}

